{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "Item",
    "description": "The Item",
    "required": [
        "name",
        "item_type_id",
        "company_id"
    ],
    "additionalProperties": false,
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "The database ID of the Item."
        },
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "The name of the Item."
        },
        "description": {
            "$id": "#/properties/description",
            "type": "string",
            "title": "The description of the Item."
        },
        "item_type_id": {
            "$id": "#/properties/item_type_id",
            "type": "number",
            "title": "The id of the item type."
        },
        "user_id": {
            "$id": "#/properties/user_id",
            "type": "number",
            "title": "The id of the user."
        },
        "company_id": {
            "$id": "#/properties/company_id",
            "type": "number",
            "title": "The id of the company."
        }
    }
}